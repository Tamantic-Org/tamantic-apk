<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.shopping.DetailProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.025" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.95" />

                <ImageView
                    android:id="@+id/action_to_back"
                    style="@style/IMAGE_BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_action_to_back"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toTopOf="@id/guideline_top" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProdImg"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/action_to_back">

                    <ImageView
                        android:id="@+id/viewPagerProdImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_85"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/LinearTitlePrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/images_other_view">

                    <TextView
                        android:id="@+id/tvProdName"
                        style="@style/TEXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_reguler"
                        android:gravity="center|start"
                        android:maxWidth="300dp"
                        android:text="@string/product_name_here"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProdNewPrice"
                            style="@style/TEXT_GREEN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/rp_100_000"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/lineDesc1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/LinearTitlePrice" />

                <HorizontalScrollView
                    android:id="@+id/categores_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="10dp"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/lineDesc1">

                    <LinearLayout
                        android:id="@+id/category_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/LinearDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxWidth="500dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/categores_tag">

                    <TextView
                        android:id="@+id/tvProdLocationInfo"
                        style="@style/TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:text="@string/lokasi"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_location"
                        app:drawableTint="@color/mred_600" />

                </LinearLayout>

                <TextView
                    android:id="@+id/deskripsi"
                    style="@style/TEXT_GREEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Deskripsi"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/LinearDetail" />

                <TextView
                    android:id="@+id/tvProdDesc"
                    style="@style/TEXT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_light"
                    android:text="@string/lorem_ipsum_description"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/deskripsi"
                    app:layout_constraintTop_toBottomOf="@id/deskripsi" />

                <View
                    android:id="@+id/lineDesc2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_bg"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/tvProdDesc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/images_other_view"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@drawable/background_rounded_view"
                    android:backgroundTint="@color/green_100"
                    android:elevation="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toBottomOf="@id/cardProdImg">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Gambar \nLainya"
                        android:textColor="@color/green_500"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/other_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/other_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/chat_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange_600"
        android:drawableStart="@drawable/ic_chat"
        android:fontFamily="@font/poppins_bold"
        android:text="Chat"
        android:textColor="@color/green_500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/action_to_cart"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/action_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green_500"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/tambahkan"
        android:textColor="@color/orange_600"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_owner" />

</androidx.constraintlayout.widget.ConstraintLayout>
